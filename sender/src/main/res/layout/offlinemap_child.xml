<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp" >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:text="北京"
        android:textColor="@color/taobao_black"
        android:textSize="@dimen/font_32" />

    <TextView
        android:id="@+id/name_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginStart="@dimen/margin_5dp"
        android:layout_toRightOf="@id/name"
        android:layout_toEndOf="@id/name"
        android:text="总大小"
        android:textColor="@color/offline_down_size"
        android:textSize="@dimen/font_24" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/marginRight_15dp"
        android:layout_marginEnd="@dimen/marginRight_15dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/download_progress_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:textColor="@color/gary"
            android:textSize="@dimen/font_24" />

        <ImageView
            android:id="@+id/download_status_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_cloud_download_24dp" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_line_high_0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_blue_thin" />

</RelativeLayout>