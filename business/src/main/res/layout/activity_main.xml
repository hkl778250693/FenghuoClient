<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_blue_thin"
    tools:context="com.fenghks.business.business.MainActivity">
    <LinearLayout
        android:id="@+id/business_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:paddingBottom="24dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/business_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/business_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:text="@string/shop_default_name"/>
                <TextView
                    android:id="@+id/btn_settings"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:padding="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="@string/settings"
                    android:visibility="gone"/>
            </LinearLayout>
            <TextView
                android:id="@+id/business_address"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:paddingLeft="8dp"
                android:lines="1"
                android:layout_height="wrap_content"
                android:text="@string/shop_default_address"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginRight="8dp"
                    android:text="@string/title_shop_number"/>
                <TextView
                    android:id="@+id/shop_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/white"
                    android:text="1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginRight="8dp"
                    android:text="@string/title_account_balance"/>
                <TextView
                    android:id="@+id/account_balance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/charge_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:text="@string/charge_money"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/title_shops"
        android:layout_below="@id/business_header"
        android:padding="16dp"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:text="@string/choose_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_shops"
        android:layout_below="@id/title_shops"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_blue_thin"/>
</RelativeLayout>
