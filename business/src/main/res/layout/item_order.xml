<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_order_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/cornsilk"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_orderFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textSize="16sp"
            android:text="@string/from_meituan"/>
        <TextView
            android:id="@+id/tv_ordercode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textSize="20sp"
            android:text="#0"/>
        <TextView
            android:id="@+id/tv_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="4dp"
            android:text="@string/send_now"/>
        <TextView
            android:id="@+id/tv_pre_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/darkviolet"
            android:visibility="gone"
            android:textSize="20sp"
            android:text="@string/default_time"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <LinearLayout
            android:id="@+id/ll_customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_customName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxWidth="128dp"
                android:padding="8dp"
                android:text="@string/shop_default_name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_customPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:lines="1"
                android:padding="8dp"
                android:text="@string/shop_default_name"
                android:textColor="@color/colorSecond"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_call_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_call_blue_24dp"
                android:gravity="center_vertical"
                android:text="@string/call_customer"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:text="@string/shop_default_address" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="@string/shop_default_name" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_title_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_time"
                android:textColor="@color/ltgray" />

            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/shop_default_name"
                android:textColor="@color/ltgray" />

            <TextView
                android:id="@+id/tv_title_send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="4dp"
                android:text="@string/exception_order"
                android:textColor="@color/ltgray"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/shop_default_name"
                android:textColor="@color/ltgray"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
    <!--<ImageView
        android:id="@+id/iv_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_below="@id/ll_order_title"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_map"/>-->
    <LinearLayout
        android:id="@+id/ll_sender"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/sender"/>
        <TextView
            android:id="@+id/tv_sender_name"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/sender"/>
        <TextView
            android:id="@+id/tv_sender_phone"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecond"
            android:padding="8dp"
            android:text="@string/sender"/>
        <TextView
            android:id="@+id/tv_call_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_call_blue_24dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:text="@string/call_sender"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_send_time"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/take_order"/>
        <TextView
            android:id="@+id/tv_take_time"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/sender"/>
        <TextView
            android:id="@+id/title_finish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:padding="8dp"
            android:text="@string/finish_order"/>
        <TextView
            android:id="@+id/tv_finish_time"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:text="@string/wait_finish_order"/>
        <TextView
            android:id="@+id/tv_urge"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_urge_blaue_24dp"
            android:gravity="center_vertical"
            android:text="@string/urge_order"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_map_blue_24dp"
            android:textSize="18sp"
            android:layout_marginRight="16dp"
            android:text="@string/map"/>
        <TextView
            android:id="@+id/tv_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_print_blue_24dp"
            android:textSize="18sp"
            android:layout_marginRight="16dp"
            android:text="@string/print_order"/>
        <TextView
            android:id="@+id/tv_place_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_motor_blue_24dp"
            android:visibility="gone"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginRight="16dp"
            android:text="@string/place_order"/>
        <TextView
            android:id="@+id/tv_calcel_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_recycle_blue_24dp"
            android:textSize="18sp"
            android:layout_marginRight="16dp"
            android:text="@string/cancel_order"/>
        <ImageView
            android:id="@+id/iv_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_qr_blue_24dp"/>
    </LinearLayout>
</LinearLayout>