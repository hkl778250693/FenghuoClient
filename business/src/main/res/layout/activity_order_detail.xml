<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fenghks.business.orders.OrderDetailActivity">
    <include layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_detail_heder"/>
    <LinearLayout
        android:id="@+id/ll_order_title"
        android:layout_below="@id/order_detail_heder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/ltgray"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_orderType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            android:text="@string/from_meituan"/>
        <TextView
            android:id="@+id/tv_ordercode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textSize="20sp"
            android:text="#0"/>
        <TextView
            android:id="@+id/tv_order_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="16sp"
            android:text="@string/send_now"/>
    </LinearLayout>
</RelativeLayout>
